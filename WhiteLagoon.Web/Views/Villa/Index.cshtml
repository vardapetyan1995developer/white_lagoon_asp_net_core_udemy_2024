@model IEnumerable<WhiteLagoon.Domain.Entities.Villa>

<div class="container mt-5">
    <div class="row">
        <div class="col">
            <div class="w-100 card border-0 p-4">
                <div class="card-header bg-success bg-gradient m-lg-0 py-3">
                    <h2>Villa List</h2>
                </div>

                <div class="card-body border p-4">
                    <div class="row pb-3">
                        <div class="col-6 offset-6 text-end">
                            <a asp-controller="Villa" asp-action="Create" class="btn btn-secondary shadow-none">
                                <i class="bi bi-plus-circle"></i>
                                Create New
                            </a>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>Sqft</th>
                                    <th>Occupancy</th>
                                    <th></th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var obj in Model)
                                {
                                    <tr>
                                        <td>@obj.Name</td>
                                        <td>@obj.Price</td>
                                        <td>@obj.Sqft</td>
                                        <td>@obj.Occupancy</td>
                                        <td>
                                            <div class="w-75 btn-group d-flex m-0 m-auto" role="group">
                                                <a asp-controller="Villa" asp-action="Update" asp-route-villaId="@obj.Id" class="btn btn-success shadow-none mx-2">
                                                    <i class="bi bi-pencil-square"></i>
                                                    Edit
                                                </a>

                                                <a asp-controller="Villa" asp-action="Delete" asp-route-villaId="@obj.Id" class="btn btn-danger shadow-none mx-2">
                                                    <i class="bi bi-trash-fill"></i>
                                                    Delete
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>